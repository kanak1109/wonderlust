<% layout("/layout/boilerplate") %>
<body>
    <h3>All Listings</h3>

    <!-- Uncomment the form below to create a new listing -->
    <!-- 
    <form method="GET" action="/listings/new">
        <button type="submit">Create New Listing</button>
    </form> 
    -->
    
    <div class="container">
        <div
          class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"
          style="display: flex">
          <% for (let listing of allListings) {%>
          <a href="/listings/<%=listing._id%>"
            ><div class="card col listing-card" style="width: 17rem">
              <img
                src="<%=listing.image.url%>"
                class="card-img-top"
                alt="Listing_image"
                style="height: 20rem" />
              <div class="card-img-overlay"></div>
    
              <div class="card-body">
                <p class="card-text">
                  <b><%= listing.title %></b><br />
                  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                  <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                </p>
              </div>
            </div>
          </a>
          <% } %>
        </div>
      </div>
    </div>
        
</body>

